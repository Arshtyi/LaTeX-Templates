% --- Figure/Subfigure Caption Customization ---
\renewcommand{\figurename}{Figure} % Change the default name "Figure" (if needed, e.g., for language)
\DeclareCaptionFormat{subfig}{Figure \thefigure~-~(#1): #3} % Custom format for subfigure captions: "Figure <main_fig_num> - (<subfig_letter>): <subfig_caption>"
\captionsetup[subfigure]{format=subfig, labelformat=simple} % Apply the custom format to subfigures
\renewcommand{\thesubfigure}{\alph{subfigure}} % Use lowercase letters (a, b, c) for subfigure numbering

% --- Subfigure Reference Format Customization ---
% Modifies how \ref{...} refers to subfigures
\makeatletter
\renewcommand{\p@subfigure}{\thefigure~-~(} % Prefix for subfigure references: "<main_fig_num> - ("
\renewcommand{\thesubfigure}{\alph{subfigure})} % Subfigure number format within references: "a)", "b)", etc.
\makeatother

% --- Cross-reference Naming (cleveref) ---
\crefname{figure}{Figure}{Figures} % Define singular and plural names for figure references used by \cref
\crefname{subfigure}{Figure}{Figures} % Define singular and plural names for subfigure references used by \cref (often same as figure)

